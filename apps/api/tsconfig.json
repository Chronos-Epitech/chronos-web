{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@chronos/*": ["../../packages/*/src"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "../../packages/types/src/globals.d.ts"],
  "exclude": ["node_modules"]
}
