{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "CLERK_SECRET_KEY",
    "CLERK_PUBLISHABLE_KEY",
    "SUPABASE_URL",
    "SUPABASE_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "@chronos/api#build": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "interruptible": true
    },
    "start": {
      "cache": false,
      "persistent": true,
      "interruptible": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "cache": false
    },
    "format:check": {
      "cache": false
    },
    "generate:types": {
      "cache": false,
      "outputs": ["packages/types/src/supabase-types.ts"]
    },
    "check": {
      "dependsOn": ["format:check"]
    },
    "test:api": {
      "cache": false
    }
  }
}
